<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.viorel.firebase.MainActivity">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="105dp"
        android:id="@+id/textEmail"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/email_text"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/pass_text"
        android:ems="10"
        android:layout_below="@+id/textEmail"
        android:layout_alignLeft="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail"
        android:layout_marginTop="35dp"
        android:id="@+id/textpass" />

    <Button
        android:text="@string/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/button2"
        android:layout_below="@+id/textpass"
        android:layout_alignLeft="@+id/textpass"
        android:layout_alignStart="@+id/textpass" />

    <TextView
        android:text="@string/inregistrare_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textInregistrare"
        android:gravity="center_horizontal" />

    <TextView
        android:text="@string/inregistreazate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRegister"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/textpass"
        android:layout_alignEnd="@+id/textpass" />
</RelativeLayout>
